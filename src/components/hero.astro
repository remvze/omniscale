---
import { Container } from './container';
import Scales from './scales.astro';
---

<Container>
  <section class="hero">
    <img
      alt="Omniscale Logo"
      class="logo"
      height="30"
      src="/logo.svg"
      width="30"
    />
    <h1>Omniscale</h1>
    <p class="desc">From galaxies to atomsâ€”where are you?</p>
    <p class="instruction">Select two to compare their proportions.</p>
    <Scales active="logarithmic" />
  </section>
</Container>

<style>
  .hero {
    padding: 100px 0 72px;

    & .logo {
      display: block;
      width: 30px;
      height: 30px;
      margin-bottom: 16px;
    }

    & h1 {
      font-family: var(--font-display);
      font-size: var(--font-lg);
      font-weight: 700;
    }

    & .desc {
      margin-top: 4px;
      font-size: var(--font-sm);
      line-height: 1.6;
      color: var(--color-foreground-subtle);
    }

    & .instruction {
      margin-top: 4px;
      font-size: var(--font-xsm);
      line-height: 1.6;
      color: var(--color-foreground-subtler);
    }
  }
</style>
